# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration - Using SQLite for development
DB_DIALECT=sqlite
DB_STORAGE=./database.sqlite

# Redis Configuration (Optional for development)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=dev-jwt-secret-key-2024
JWT_REFRESH_SECRET=dev-refresh-secret-key-2024
JWT_EXPIRE=1h
JWT_REFRESH_EXPIRE=7d

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# QR Code Configuration
QR_SECRET=dev-qr-secret-key-2024
QR_EXPIRY_MINUTES=30

# Geolocation Configuration
MESS_LATITUDE=28.6139
MESS_LONGITUDE=77.2090
MESS_RADIUS_METERS=200

# Frontend URL
FRONTEND_URL=http://localhost:3001

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,text/csv,application/vnd.ms-excel

# Email Configuration (Development)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_mailtrap_user
SMTP_PASSWORD=your_mailtrap_password
SMTP_FROM=noreply@hostel-mess-dev.com

# Admin Configuration (Development)
ADMIN_EMAIL=admin@hosteleats.com
ADMIN_PHONE=9999999999
ADMIN_DEFAULT_PASSWORD=admin123

# Development Features
ENABLE_SEEDING=true
SKIP_EMAIL_VERIFICATION=true