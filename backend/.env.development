# Server Configuration
NODE_ENV=development
PORT=5000
SERVER_URL=http://localhost:5000

# Database Configuration - MongoDB for development
MONGODB_URI=mongodb://localhost:27017/hostel_mess_dev
DB_POOL_MAX=10
DB_POOL_MIN=2

# Redis Configuration (Optional for development)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=dev-jwt-secret-key-2024
JWT_REFRESH_SECRET=dev-refresh-secret-key-2024
JWT_EXPIRE=1h
JWT_REFRESH_EXPIRE=7d

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# QR Code Configuration
QR_SECRET=dev-qr-secret-key-2024
QR_EXPIRY_MINUTES=30

# Geolocation Configuration
MESS_LATITUDE=28.6139
MESS_LONGITUDE=77.2090
GEOFENCE_RADIUS=200

# Meal Timings
BREAKFAST_START=07:00
BREAKFAST_END=10:00
LUNCH_START=12:00
LUNCH_END=15:00
DINNER_START=19:00
DINNER_END=22:00

# Frontend URL
FRONTEND_URL=http://localhost:3001
CORS_ORIGIN=http://localhost:3001,http://localhost:3000

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,text/csv,application/vnd.ms-excel

# Email Configuration (Development)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_mailtrap_user
SMTP_PASSWORD=your_mailtrap_password
SMTP_FROM=noreply@hostel-mess-dev.com

# Admin Configuration (Development)
ADMIN_EMAIL=admin@hosteleats.com
ADMIN_PHONE=9876543210
ADMIN_DEFAULT_PASSWORD=admin123

# Development Features
ENABLE_SEEDING=true
SKIP_EMAIL_VERIFICATION=true
