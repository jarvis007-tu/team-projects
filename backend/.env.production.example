# Production Environment Configuration

# Server Configuration
NODE_ENV=production
PORT=5000
API_VERSION=v1
SERVER_URL=https://your-production-domain.com

# Database Configuration (Production MySQL)
DB_HOST=your-mysql-host
DB_PORT=3306
DB_NAME=hostel_mess_production
DB_USER=hostel_app_user
DB_PASSWORD=your-secure-db-password
DB_POOL_MIN=5
