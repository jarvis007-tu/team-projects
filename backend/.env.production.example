# Production Environment Configuration

# Server Configuration
NODE_ENV=production
PORT=5000
API_VERSION=v1
SERVER_URL=https://your-production-domain.com

# Database Configuration - MongoDB Production
MONGODB_URI=mongodb://your-mongodb-host:27017/hostel_mess_production
# For MongoDB Atlas (Recommended):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/hostel_mess_production?retryWrites=true&w=majority
DB_POOL_MAX=20
DB_POOL_MIN=5

# Redis Configuration (Production)
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_TTL=3600

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secure-jwt-secret-256-bits-long-minimum
JWT_EXPIRE=1h
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-256-bits-long
JWT_REFRESH_EXPIRE=7d

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=https://your-frontend-domain.com,https://your-admin-domain.com

# AWS Configuration (Production - Optional for file storage)
AWS_ACCESS_KEY_ID=AKIAIOSFODNN7EXAMPLE
AWS_SECRET_ACCESS_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY
AWS_REGION=ap-south-1
AWS_S3_BUCKET=your-production-bucket

# Firebase Configuration (Production - Optional for push notifications)
FIREBASE_PROJECT_ID=your-prod-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_FIREBASE_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"

# Email Configuration (Production SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=Hostel Management <noreply@yourdomain.com>

# QR Code Configuration
QR_EXPIRY_MINUTES=30
QR_SECRET=your-qr-encryption-key-change-this-in-production

# Default Mess Configuration (For initial setup - can be changed in admin panel)
DEFAULT_MESS_NAME=Main Mess
DEFAULT_MESS_CODE=MAIN
DEFAULT_MESS_ADDRESS=Main Campus Building
DEFAULT_MESS_CITY=Your City
DEFAULT_MESS_STATE=Your State
DEFAULT_MESS_PINCODE=000000
DEFAULT_MESS_LATITUDE=28.7041
DEFAULT_MESS_LONGITUDE=77.1025
DEFAULT_MESS_RADIUS=200
DEFAULT_MESS_CAPACITY=1000

# Logging (Production)
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=50m
LOG_FILE_MAX_FILES=30d
LOG_FILE_PATH=./logs

# Meal Timings (24-hour format - adjust for your hostel)
BREAKFAST_START=07:00
BREAKFAST_END=10:00
LUNCH_START=12:00
LUNCH_END=15:00
DINNER_START=19:00
DINNER_END=22:00

# File Upload (Production limits)
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,text/csv,application/vnd.ms-excel

# Admin Configuration (Initial admin setup)
ADMIN_EMAIL=admin@your-domain.com
ADMIN_PHONE=9876543210
ADMIN_DEFAULT_PASSWORD=CHANGE-THIS-SECURE-PASSWORD

# Performance Monitoring (Optional)
ENABLE_PERFORMANCE_MONITORING=false
SENTRY_DSN=your-sentry-dsn-url

# Production Features
ENABLE_SEEDING=false
SKIP_EMAIL_VERIFICATION=false
